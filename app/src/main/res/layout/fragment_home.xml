<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- แบนเนอร์ -->
    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_cloth" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="สินค้าแนะนำ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <!-- RecyclerView สินค้าแนะนำ -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewRecommended"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:nestedScrollingEnabled="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="โปรโมชั่นพิเศษ"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingTop="16dp" />

    <!-- RecyclerView โปรโมชั่น -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPromotions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:nestedScrollingEnabled="false" />
</LinearLayout>
